<!DOCTYPE html>
<html>
  <head>
    <title>Leaderboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <style>
      @import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap");

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Michroma", sans-serif;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
        color: #e0e0e0;
        min-height: 100vh;
        padding: 2rem 1rem;
        position: relative;
        overflow-x: hidden;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 20% 50%,
            rgba(120, 119, 198, 0.1) 0%,
            transparent 50%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(255, 119, 198, 0.08) 0%,
            transparent 50%
          );
        pointer-events: none;
        z-index: -1;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
      }

      h1 {
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 3rem;
        background: linear-gradient(135deg, #ffffff 0%, #a0a0a0 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
      }

      .leaderboard-container {
        background: rgba(20, 20, 20, 0.8);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      }

      table {
        width: 100%;
        border-collapse: collapse;
      }

      th {
        background: rgba(30, 30, 30, 0.9);
        padding: 1.5rem;
        font-weight: 600;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #a0a0a0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      td {
        padding: 1.5rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        transition: all 0.3s ease;
      }

      tr {
        transition: all 0.3s ease;
      }

      tr:hover {
        background: rgba(255, 255, 255, 0.03);
        transform: translateX(5px);
      }

      .rank-cell {
        text-align: center;
        font-weight: 600;
        font-size: 1.1rem;
        min-width: 80px;
        position: relative;
      }

      .rank-medal {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        margin-right: 0.5rem;
      }

      .rank-1 .rank-medal::before {
        content: "ðŸ¥‡";
        filter: drop-shadow(0 0 10px rgba(255, 215, 0, 0.3));
      }

      .rank-2 .rank-medal::before {
        content: "ðŸ¥ˆ";
        filter: drop-shadow(0 0 10px rgba(192, 192, 192, 0.3));
      }

      .rank-3 .rank-medal::before {
        content: "ðŸ¥‰";
        filter: drop-shadow(0 0 10px rgba(205, 127, 50, 0.3));
      }

      .rank-1 {
        background: linear-gradient(
          135deg,
          rgba(255, 215, 0, 0.1) 0%,
          rgba(255, 215, 0, 0.05) 100%
        );
        border-left: 4px solid #ffd700;
        color: #ffd700;
      }

      .rank-2 {
        background: linear-gradient(
          135deg,
          rgba(192, 192, 192, 0.1) 0%,
          rgba(192, 192, 192, 0.05) 100%
        );
        border-left: 4px solid #c0c0c0;
        color: #c0c0c0;
      }

      .rank-3 {
        background: linear-gradient(
          135deg,
          rgba(205, 127, 50, 0.1) 0%,
          rgba(205, 127, 50, 0.05) 100%
        );
        border-left: 4px solid #cd7f32;
        color: #cd7f32;
      }

      .username-cell {
        text-align: center;
        font-weight: 500;
        font-size: 1.1rem;
        color: #ffffff;
      }

      .score-cell {
        text-align: center;
        font-weight: 600;
        font-size: 1.1rem;
        color: #00ff88;
        font-variant-numeric: tabular-nums;
      }

      .highlight {
        background: linear-gradient(
          135deg,
          rgba(0, 255, 136, 0.15) 0%,
          rgba(0, 255, 136, 0.08) 100%
        ) !important;
        border-left: 4px solid #00ff88 !important;
        position: relative;
        box-shadow: inset 0 0 0 1px rgba(0, 255, 136, 0.2);
      }

      .highlight::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 4px;
        background: linear-gradient(135deg, #00ff88, #00cc6a);
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.4);
      }

      .highlight .username-cell {
        color: #00ff88 !important;
        font-weight: 600 !important;
      }

      .current-user {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(20, 20, 20, 0.6);
        border-radius: 15px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        font-size: 1rem;
        color: #a0a0a0;
      }

      .pagination {
        margin-top: 2rem;
        text-align: center;
        display: flex;
        justify-content: center;
        gap: 0.5rem;
        flex-wrap: wrap;
      }

      .pagination a,
      .pagination strong {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.1);
      }

      .pagination a {
        color: #a0a0a0;
        background: rgba(20, 20, 20, 0.6);
      }

      .pagination a:hover {
        background: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        transform: translateY(-2px);
      }

      .pagination strong {
        background: linear-gradient(135deg, #00ff88, #00cc6a);
        color: #000000;
        font-weight: 600;
      }

      @media (max-width: 768px) {
        body {
          padding: 1rem 0.5rem;
        }

        h1 {
          font-size: 2rem;
          margin-bottom: 2rem;
        }

        th,
        td {
          padding: 1rem 0.5rem;
        }

        .rank-medal {
          font-size: 1.5rem;
        }

        .username-cell,
        .score-cell {
          font-size: 1rem;
        }
      }
      html,
      body {
        height: 100%;
        background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
      }
      th {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Leaderboard</h1>

      <div class="leaderboard-container">
        <table>
          <thead>
            <tr>
              <th>Rank</th>
              <th>Player</th>
              <th>Score</th>
            </tr>
          </thead>
          <tbody>
            <% leaderboard.forEach(user => { %>
            <tr
              class="<%= (user.id == userId || user.username === currentUser?.username) ? 'highlight' : '' %> <%= user.rank <= 3 ? 'rank-' + user.rank : '' %>"
            >
              <td class="rank-cell">
                <% if (user.rank <= 3) { %>
                <span class="rank-medal"></span>
                <% } %> <%= user.rank %>
              </td>
              <td class="username-cell"><%= user.username %></td>
              <td class="score-cell"><%= user.hscore.toLocaleString() %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <% if (currentUser && !leaderboard.some(u => u.id === currentUser.id)) {
      %>
      <div class="current-user">
        Your Position: Rank <%= currentUser.rank %> | <%= currentUser.username
        %> | Score: <%= currentUser.hscore.toLocaleString() %>
      </div>
      <% } %>

      <!-- Pagination -->
      <div class="pagination">
        <% for (let i = 1; i <= totalPages; i++) { %> <% if (i === currentPage)
        { %>
        <strong><%= i %></strong>
        <% } else { %>
        <a href="/user/<%= userId %>/leaderboard?page=<%= i %>"><%= i %></a>
        <% } %> <% } %>
      </div>
    </div>

    <script>
      // Backup highlighting method in case server-side logic fails
      document.addEventListener("DOMContentLoaded", function () {
        // You can manually set the current user ID or username here if needed
        const currentUserId = "<%= userId %>";
        const currentUserName = '<%= currentUser?.username || "" %>';

        // Find and highlight the current user's row
        const rows = document.querySelectorAll("tbody tr");
        rows.forEach((row) => {
          const cells = row.querySelectorAll("td");
          if (cells.length >= 2) {
            const username = cells[1].textContent.trim();
            // Add highlighting if this is the current user
            if (username === currentUserName || username === "tushjjodd") {
              // Add specific username as backup
              row.classList.add("highlight");
            }
          }
        });
      });
    </script>
  </body>
</html>
