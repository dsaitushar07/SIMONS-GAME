<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Leaderboard</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background: #0a0a0a;
        color: #e0e0e0;
        min-height: 100vh;
        padding: 2rem 1rem;
        position: relative;
        overflow-x: hidden;
      }

      body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(
            circle at 20% 30%,
            rgba(120, 119, 198, 0.15) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 80% 20%,
            rgba(255, 119, 198, 0.1) 0%,
            transparent 40%
          ),
          radial-gradient(
            circle at 40% 70%,
            rgba(0, 255, 136, 0.08) 0%,
            transparent 40%
          );
        pointer-events: none;
        z-index: -1;
      }

      .container {
        max-width: 900px;
        margin: 0 auto;
        position: relative;
      }

      .header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .main-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        background: linear-gradient(
          135deg,
          #ffffff 0%,
          #00ff88 50%,
          #7777c6 100%
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
        text-shadow: 0 0 30px rgba(0, 255, 136, 0.3);
      }

      .subtitle {
        font-size: 1.2rem;
        font-weight: 400;
        color: #a0a0a0;
        letter-spacing: 0.05em;
        text-transform: uppercase;
      }

      .leaderboard-wrapper {
        background: rgba(15, 15, 15, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 24px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        overflow: hidden;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5),
          0 0 0 1px rgba(255, 255, 255, 0.05),
          inset 0 1px 0 rgba(255, 255, 255, 0.1);
        position: relative;
      }

      .leaderboard-wrapper::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
          90deg,
          transparent,
          rgba(0, 255, 136, 0.5),
          transparent
        );
      }

      .table-container {
        width: 100%;
        overflow: hidden; /* Prevent any overflow */
      }

      table {
        width: 100%;
        border-collapse: collapse;
        table-layout: fixed; /* Fixed table layout prevents expansion */
      }

      thead {
        background: rgba(20, 20, 20, 0.8);
      }

      th {
        padding: 1.8rem 1rem;
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #888;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
      }

      /* Column widths */
      th:nth-child(1),
      td:nth-child(1) {
        width: 20%;
      } /* Rank */
      th:nth-child(2),
      td:nth-child(2) {
        width: 50%;
      } /* Player */
      th:nth-child(3),
      td:nth-child(3) {
        width: 30%;
      } /* Score */

      tbody tr {
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
      }

      tbody tr:not(.highlight):hover {
        background: rgba(255, 255, 255, 0.03);
        transform: scale(1.002);
      }

      td {
        padding: 1.5rem 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        text-align: center;
        position: relative;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }

      .rank-cell {
        font-weight: 700;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
      }

      .rank-medal::before {
        content: "ðŸ¥‡"; /* default fallback */
        margin-right: 0.25rem;
      }

      .rank-1 .rank-medal::before {
        content: "ðŸ¥‡";
      }

      .rank-2 .rank-medal::before {
        content: "ðŸ¥ˆ";
      }

      .rank-3 .rank-medal::before {
        content: "ðŸ¥‰";
      }

      .rank-medal {
        font-size: 1.1rem;
        font-weight: 700;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        color: inherit; /* Keeps rank-specific color */
      }

      .rank-number {
        font-weight: 700;
        margin-right: 0.25rem;
        font-size: 1.1rem;
      }

      .rank-1 {
        background: linear-gradient(
          135deg,
          rgba(255, 215, 0, 0.12) 0%,
          rgba(255, 215, 0, 0.05) 100%
        );
        border-left: 3px solid #ffd700;
        color: #ffd700;
      }

      .rank-2 {
        background: linear-gradient(
          135deg,
          rgba(192, 192, 192, 0.12) 0%,
          rgba(192, 192, 192, 0.05) 100%
        );
        border-left: 3px solid #c0c0c0;
        color: #c0c0c0;
      }

      .rank-3 {
        background: linear-gradient(
          135deg,
          rgba(205, 127, 50, 0.12) 0%,
          rgba(205, 127, 50, 0.05) 100%
        );
        border-left: 3px solid #cd7f32;
        color: #cd7f32;
      }

      .username-cell {
        font-weight: 500;
        font-size: 1.05rem;
        color: #ffffff;
      }

      .score-cell {
        font-weight: 600;
        font-size: 1.1rem;
        color: #00ff88;
        font-variant-numeric: tabular-nums;
        font-family: "SF Mono", Monaco, "Cascadia Code", monospace;
      }

      .highlight {
        background: linear-gradient(
          135deg,
          rgba(0, 255, 136, 0.15) 0%,
          rgba(0, 255, 136, 0.08) 100%
        ) !important;
        border-left: 3px solid #00ff88 !important;
        position: relative;
      }

      .highlight::after {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 100%;
        background: linear-gradient(
          90deg,
          rgba(0, 255, 136, 0.1) 0%,
          transparent 50%
        );
        pointer-events: none;
      }

      .highlight .username-cell {
        color: #00ff88 !important;
        font-weight: 600 !important;
      }

      .highlight:hover {
        background: linear-gradient(
          135deg,
          rgba(0, 255, 136, 0.2) 0%,
          rgba(0, 255, 136, 0.1) 100%
        ) !important;
        transform: scale(1.005);
        box-shadow: 0 0 20px rgba(0, 255, 136, 0.2);
      }

      .current-user-info {
        margin-top: 2rem;
        padding: 1.5rem;
        background: rgba(15, 15, 15, 0.7);
        border-radius: 16px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        text-align: center;
        font-size: 1rem;
        color: #a0a0a0;
      }

      .glow-effect {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 120%;
        height: 120%;
        background: radial-gradient(
          circle,
          rgba(0, 255, 136, 0.1) 0%,
          transparent 70%
        );
        opacity: 0;
        transition: opacity 0.3s ease;
        pointer-events: none;
        z-index: -1;
      }

      .highlight .glow-effect {
        opacity: 1;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        body {
          padding: 1rem 0.5rem;
        }

        .main-title {
          font-size: 2.5rem;
        }

        .subtitle {
          font-size: 1rem;
        }

        th,
        td {
          padding: 1rem 0.5rem;
          font-size: 0.9rem;
        }

        .rank-medal {
          font-size: 1.2rem;
        }

        /* .rank-medal {
          font-weight: 700;
          font-size: 1.1rem;
          display: inline-flex;
          align-items: center;
          justify-content: center;
        } */

        .rank-cell {
          font-size: 1rem;
        }

        th:nth-child(1),
        td:nth-child(1) {
          width: 25%;
        }
        th:nth-child(2),
        td:nth-child(2) {
          width: 45%;
        }
        th:nth-child(3),
        td:nth-child(3) {
          width: 30%;
        }
      }

      @media (max-width: 480px) {
        .main-title {
          font-size: 2rem;
        }

        th,
        td {
          padding: 0.8rem 0.3rem;
          font-size: 0.85rem;
        }
      }

      /* Animation for page load */
      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .container {
        animation: fadeInUp 0.8s ease-out;
      }

      tbody tr {
        animation: fadeInUp 0.6s ease-out;
        animation-fill-mode: both;
      }

      tbody tr:nth-child(1) {
        animation-delay: 0.1s;
      }
      tbody tr:nth-child(2) {
        animation-delay: 0.2s;
      }
      tbody tr:nth-child(3) {
        animation-delay: 0.3s;
      }
      tbody tr:nth-child(4) {
        animation-delay: 0.4s;
      }
      tbody tr:nth-child(5) {
        animation-delay: 0.5s;
      }
      tbody tr:nth-child(6) {
        animation-delay: 0.6s;
      }
      tbody tr:nth-child(7) {
        animation-delay: 0.7s;
      }
      tbody tr:nth-child(8) {
        animation-delay: 0.8s;
      }
      tbody tr:nth-child(9) {
        animation-delay: 0.9s;
      }
      tbody tr:nth-child(10) {
        animation-delay: 1s;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="header">
        <h1 class="main-title">Leaderboard</h1>
        <p class="subtitle">Top 10 Ranks of the Server</p>
      </div>
      <% if (currentUser) { %>
      <div class="current-user-info">
        <strong>Your Position:</strong> Rank <%= currentUser.rank %> | <%=
        currentUser.username %> | Score: <%= currentUser.hscore.toLocaleString()
        %>
      </div>
      <% } else { %>
      <div class="current-user-info">
        User not found in top 10. Keep playing to climb the leaderboard!
      </div>
      <% } %>
      <br />
      <div class="leaderboard-wrapper">
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>Rank</th>
                <th>Player</th>
                <th>Score</th>
              </tr>
            </thead>
            <tbody>
              <% leaderboard.forEach((user, index) => { %>
              <tr
                class="<%= (user.id == userId) ? 'highlight' : '' %> <%= user.rank <= 3 ? 'rank-' + user.rank : '' %>"
              >
                <td class="rank-cell">
                  <% if (user.rank <= 3) { %>
                  <span class="rank-medal"><%= user.rank %></span>
                  <% } else { %>
                  <span class="rank-number"><%= user.rank %></span>
                  <% } %>
                </td>

                <td class="username-cell"><%= user.username %></td>
                <td class="score-cell"><%= user.hscore.toLocaleString() %></td>
                <div class="glow-effect"></div>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Add subtle parallax effect to background
        document.addEventListener("mousemove", function (e) {
          const x = e.clientX / window.innerWidth;
          const y = e.clientY / window.innerHeight;

          document.body.style.background = `
                    radial-gradient(circle at ${20 + x * 10}% ${
            30 + y * 10
          }%, rgba(120, 119, 198, 0.15) 0%, transparent 40%),
                    radial-gradient(circle at ${80 - x * 10}% ${
            20 + y * 10
          }%, rgba(255, 119, 198, 0.1) 0%, transparent 40%),
                    radial-gradient(circle at ${40 + x * 5}% ${
            70 - y * 10
          }%, rgba(0, 255, 136, 0.08) 0%, transparent 40%),
                    #0a0a0a
                `;
        });

        // Add smooth scroll effect for better UX
        document.documentElement.style.scrollBehavior = "smooth";
      });
    </script>
  </body>
</html>
